<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TorchActivity">

    <RelativeLayout
        android:id="@+id/ll_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:background="#ff0000"
        android:orientation="vertical"
        android:padding="3dp">

        <!-- fling area -->
        <TextView
            android:id="@+id/tv_fling_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="0dp"
            android:background="#ffffffff" />

        <!-- color settings -->
        <LinearLayout
            android:id="@+id/ll_color_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00808080"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <!-- color info -->
            <TextView
                android:id="@+id/tv_color_info"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="top"
                android:background="#32ababff"
                android:gravity="center"
                android:padding="6dp"
                android:text=""
                android:textColor="#323200"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- color edits -->
            <LinearLayout
                android:id="@+id/ll_color_edits"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="#00808080"
                android:orientation="vertical"
                android:visibility="gone"
                tools:ignore="MissingConstraints">

                <!--rgb-->
                <LinearLayout
                    android:id="@+id/ll_rgb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tv_rgb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="0dp"
                        android:text="RGB: "
                        android:textSize="@dimen/color_setting_text_size"
                        android:textStyle="bold" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_red"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_green"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_blue"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_red_hex"
                        android:layout_width="@dimen/color_setting_edit_hex_size"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="@dimen/color_edit_margin"
                        android:layout_marginBottom="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:digits="0123456789ABCDEF"
                        android:inputType="textCapCharacters|textVisiblePassword"
                        android:maxLength="2"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_green_hex"
                        android:layout_width="@dimen/color_setting_edit_hex_size"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/color_edit_margin"
                        android:layout_marginBottom="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:digits="0123456789ABCDEF"
                        android:inputType="textCapCharacters|textVisiblePassword"
                        android:maxLength="2"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_blue_hex"
                        android:layout_width="@dimen/color_setting_edit_hex_size"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/color_edit_margin"
                        android:layout_marginBottom="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:digits="0123456789ABCDEF"
                        android:inputType="textCapCharacters|textVisiblePassword"
                        android:maxLength="2"
                        android:singleLine="true" />
                </LinearLayout>

                <!--hsv-->
                <LinearLayout
                    android:id="@+id/ll_hsv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tv_hsv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="0dp"
                        android:text="HSV: "
                        android:textSize="@dimen/color_setting_text_size"
                        android:textStyle="bold" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_hsv_h"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_hsv_s"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_hsv_v"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />
                </LinearLayout>

                <!--hsl-->
                <LinearLayout
                    android:id="@+id/ll_hsl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tv_hsl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="0dp"
                        android:text="HSL: "
                        android:textSize="@dimen/color_setting_text_size"
                        android:textStyle="bold" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_hsl_h"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_hsl_s"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_hsl_l"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />
                </LinearLayout>

                <!--lux-->
                <LinearLayout
                    android:id="@+id/ll_lux"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tv_lux"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="0dp"
                        android:text="LUX: "
                        android:textSize="@dimen/color_setting_text_size"
                        android:textStyle="bold" />

                    <com.liz.puretorch.ui.ColorEdit
                        android:id="@+id/edit_lux"
                        android:layout_width="@dimen/color_setting_edit_size"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/color_edit_margin"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>